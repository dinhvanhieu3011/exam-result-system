
@{
    Layout = null;
    Int32 totalStudent = 0, totalUser = 0, totalExam = 0;
    if (ViewBag.TotalStudent != null)
    {
        totalStudent = ViewBag.TotalStudent;
    }
    if(ViewBag.TotalUser != null)
    {
        totalUser = ViewBag.TotalUser;
    }
    if (ViewBag.TotalExam != null)
    {
        totalExam = ViewBag.TotalExam;
    }
}

<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="info-box">
        <span class="info-box-icon bg-aqua"><i class="fa fa-exclamation"></i></span>
        <div class="info-box-content">
            <span class="info-box-text">Khóa thi</span>
            <span class="info-box-number">@totalExam</span>
        </div>
        <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
</div>
<!-- /.col -->
<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="info-box">
        <span class="info-box-icon bg-red"><i class="fa fa-user-circle"></i></span>

        <div class="info-box-content">
            <span class="info-box-text">Thí sinh</span>
            <span class="info-box-number">@totalStudent</span>
        </div>
        <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
</div>
<!-- /.col -->
<!-- fix for small devices only -->
<div class="clearfix visible-sm-block"></div>

<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="info-box">
        <span class="info-box-icon bg-green"><i class="ion ion-document-text"></i></span>
        <div class="info-box-content">
            <span class="info-box-text">Số lượng USER</span>
            <span class="info-box-number">@totalUser</span>
        </div>
        <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
</div>
<!-- /.col -->
